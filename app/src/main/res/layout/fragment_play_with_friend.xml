<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.hungth.cotoan.screen.play_with_friend.PlayWithFriendViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contrainLayoutBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/banner">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutAvatar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layoutPerson1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <ProgressBar
                    android:id="@+id/progressBar_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#A39E9E"
                    app:layout_constraintStart_toStartOf="@+id/textPoint"
                    app:layout_constraintTop_toBottomOf="@+id/textPoint" />

                <TextView
                    android:id="@+id/textPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm cược"
                    android:textColor="#0F60E6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textName1"
                    app:layout_constraintTop_toBottomOf="@+id/textName1" />

                <TextView
                    android:id="@+id/textName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="Tên 1"
                    android:textColor="#051B3F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintStart_toEndOf="@+id/imageAvatar_1"
                    app:layout_constraintTop_toTopOf="@+id/imageAvatar_1" />

                <ImageView
                    android:id="@+id/imageAvatar_1"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleKillChess1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar_1"
                    app:spanCount="2">

                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/layoutPerson1"
                app:layout_constraintWidth_percent="0.5">

                <ProgressBar
                    android:id="@+id/progressBar_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#A39E9E"
                    app:layout_constraintStart_toStartOf="@+id/textPoint1"
                    app:layout_constraintTop_toBottomOf="@+id/textPoint1" />

                <TextView
                    android:id="@+id/textPoint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm cược"
                    android:textColor="#0F60E6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textName2"
                    app:layout_constraintTop_toBottomOf="@+id/textName2" />

                <TextView
                    android:id="@+id/textName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="Tên 1"
                    android:textColor="#051B3F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintStart_toEndOf="@+id/imageAvatar_2"
                    app:layout_constraintTop_toTopOf="@+id/imageAvatar_2" />

                <ImageView
                    android:id="@+id/imageAvatar_2"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleKillChess2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintStart_toStartOf="@+id/imageAvatar_2"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar_2"
                    app:spanCount="2" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/imageBoardChess"
            android:layout_width="315dp"
            android:layout_height="395dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/board_chess_mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutAvatar"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
